{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "module": "esNext",
    "esModuleInterop": true,
    "target": "esNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules"]
}
